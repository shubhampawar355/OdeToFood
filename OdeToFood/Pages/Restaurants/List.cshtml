@page
@model MyApp.Namespace.ListModel
@{
}
<h3>Restaurants</h3>
<form action="/Restaurants/List" method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span>
                <button class="btn btn-default">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
@if (Model.DeleteMessage != null)
{
    <div class="alert alert-info">
        @Model.DeleteMessage
    </div>
}

<table class="table table-hover">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr class="flex-column">
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a asp-route-restaurantId="@restaurant.Id" asp-page="./Detail">
                    <i class="fas fa-search"></i>
                </a>
            </td>
            <td>
                <a asp-route-restaurantId="@restaurant.Id" asp-page="./Edit">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td>
                <a asp-route-restaurantId="@restaurant.Id" asp-page="./Delete">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>

    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>


@section footer{
    <div>
        @Model.Message
    </div>
}